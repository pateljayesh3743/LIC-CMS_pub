    <title>LIC-CMS</title>
    <!-- BOOTSTRAP CORE STYLE  -->

    <link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONT AWESOME ICONS  -->
    <link href="~/Content/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLE  -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />

    <link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/datatables/dataTables.responsive.css" rel="stylesheet" />
</head>
<body>

    <!-- HEADER END-->
    <div class="navbar navbar-inverse set-radius-zero">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">
                    @*<img src="~/Content/assets/img/logo.png" />*@
                    <img src="~/Content/assets/img/logo.png" style="max-width: 127%;min-height: 100%" />
                </a>
            </div>
            <div class="left-div">
                <div class="user-settings-wrapper">
                    @if (LIC_CMS.Models.SessionWrapper.UserName != null)
                    {
                        using (LIC_CMS.Models.LIC_CMSEntities db = new LIC_CMS.Models.LIC_CMSEntities())
                        {
                            var username = LIC_CMS.Models.SessionWrapper.UserName;
                            var user = db.USER_MASTER.Where(x => x.USER_NAME == username).FirstOrDefault();
                            <ul class="nav">
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                                        <span class="glyphicon glyphicon-user" style="font-size: 25px;"></span>
                                    </a>
                                    <div class="dropdown-menu dropdown-settings">
                                        <div class="media">
                                            <a class="media-left" href="#">
                                                <img src='@Url.Content("~/Content/assets/Images/" + user.USER_ID_+".png")' alt="" />
                                            </a>
                                            <div class="media-body">
                                                <h4 class="media-heading">@user.USER_NAME </h4>
                                                <h5>Developer & Designer</h5>
                                            </div>
                                        </div>
                                        <hr />
                                        <h5><strong>Personal Bio : </strong></h5>
                                        Anim pariatur cliche reprehen derit.
                                        <hr />
                                        <a href="/Userdetail/detail/@user.USER_ID_" class="btn btn-info btn-sm">Full Profile</a>
                                        <a href="~/Login/Logout" class="btn btn-danger btn-sm">Logout</a>
                                    </div>
                                </li>
                            </ul>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- LOGO HEADER END-->
    <section class="menu-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="navbar-collapse collapse ">
                        <ul id="menu-top" class="nav navbar-nav navbar-right">
                            <li><a class="menu-top-active" href="/Client">Dashboard</a></li>
                            @*<li><a href="ui.html">UI Elements</a></li>
                                <li><a href="table.html">Data Tables</a></li>
                                <li><a href="forms.html">Forms</a></li>*@
                            <li><a href="/Login/Logout">Logout</a></li>
                            @*<li><a href="blank.html">Blank Page</a></li>*@

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- MENU SECTION END-->
    <div class="content-wrapper">
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <!-- CONTENT-WRAPPER SECTION END-->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    &copy; 2016 <a href="http://shivtechnology.gear.host/" target="_blank">Shiv Technology</a>
                </div>

            </div>
        </div>
    </footer>
    <!-- FOOTER SECTION END-->
