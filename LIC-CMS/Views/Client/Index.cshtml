    }
    function GetDateData(stringDate) {
        var d = new Date(parseInt(stringDate.replace('/Date(', '').replace(')/', ''))).toLocaleDateString().split("/");
        // `y` : year
        var y = d.splice(-1)[0];
        // set `y` as item at index `0` of `d`
        d.splice(0, 0, y);
        // join items within `d` with dash character `"-"`
        var date = d[1] + "/" + d[2] + "/" + d[0];
        return date;
    }

