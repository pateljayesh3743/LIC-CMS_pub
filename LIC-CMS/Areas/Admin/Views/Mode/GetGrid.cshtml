@model IEnumerable<LIC_CMS.Areas.Admin.Models.ModeModel>

<table id="table_data" class="table table-hover table-bordered">
    <thead>
        <tr>
            @*<th>Mode Id</th>*@
            <th>Mode Name</th>
            <th>Action</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>@item.MODE_ID</td>*@
                <td>@item.MODE_NAME</td>
                <td><a><span onclick="fillEditForm(@item.MODE_ID)" data-toggle="modal" data-target="#myModeModal" class="glyphicon glyphicon-edit cursorPointer"></span></a></td>
                @*<td>@Html.ActionLink("Delete", "Delete", new { id = item.MODE_ID }, new { onclick = "return confirm('Are you delete this Mode?')" })</td>*@
                <td><a href="Delete/@item.MODE_ID"><span class="glyphicon glyphicon-trash"></span></a></td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Content/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/datatables/dataTables.bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        $('#table_data').DataTable({
            responsive: true
        });
    });
</script>



